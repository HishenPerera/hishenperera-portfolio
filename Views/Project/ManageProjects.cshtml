@model List<hishenperera_portfolio.Models.Project>

<h2>Manage Projects</h2>

<a asp-action="AddNewProject" class="btn btn-primary mb-3">
    Add New Project
</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>Link</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var p in Model)
{
        <tr>
            <td>@p.ProjectName</td>
            <td>@p.ProjectImg</td>
            <td>
                <a href="@p.ProjectLink" target="_blank">View</a>
            </td>
            <td>
                <a asp-action="EditProject" asp-route-id="@p.ProjectId"
                   class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="DeleteProject" asp-route-id="@p.ProjectId"
                   class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
